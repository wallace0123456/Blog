<!DOCTYPE html>
<html lang ="en">
<head>
    <meta charset="UTF-8">

  <!-- <!import css and bootstrap> -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-aFq/bzH65dt+w6FI2ooMVUpc+21e0SRygnTpmBvdBgSdnuTN7QbdgL+OapgHtvPp" crossorigin="anonymous">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">   

<div class = "header">

<!-- <!header of the site> -->
    <!-- nav menu for the web -->
<ul>
  <li><a href="/contact">Contact Us</a></li>  
  <li><a href ="/all">All Articles</a></li>
  <li><a href="/">Home</a></li>

</ul>
</div>

 <!-- title of the page -->
<title>Blog</title>
</head>
<body>
<div class="container">
<h1 class = "mb-4">All articles <i class="fa fa-book"></i></h1>

<!-- <! Show the article that exist> -->
<!-- this page is use to show all the articles which is available -->

<% articles.forEach(article =>{%>
  <div class = "card mt-4">
    <div class = "card-body">     
      <!-- show the title of the article -->
      <h4 class = "card-title"><%= article.title %></h4>      

        <!-- show the date of created of the article -->
      <div class = "card-subtitle text-muted mb-2">
      <%= article.createdAt.toLocaleDateString()%>
      </div>
          <!-- show the description of the article -->
      <div class="card-text mb-2"><%= article.description%>
      </div>
      <!-- buttons for user to delete,edit or read the whole blog -->
      <a href ="articles/<%=article.slug%>" class = "btn btn-primary">Read more</a>
      <a href ="articles/edit/<%=article.id%>" class = "btn btn-info">Edit Post</a>
      <form action="/articles/<%=article.id%>?_method=DELETE" method="POST" class="d-inline">
        <button type = "sumbit" class = "btn btn-danger">Delete</button>
      </form>
</div>
</div>
<%  }) %>

<!-- <! create footer for the site> -->
<footer class="footer">

      <div class="footer-left">

        <h3>The Daily<span>Blog</span></h3>

        <p class="footer-links">
          <a href="/" class="link-1">Home</a>   
          <a href="/contact">Contact</a>
        </p>

        <p class="footer-company-name">Daily Blog Â© 2023</p>
      </div>

      <div class="footer-center">


        <!-- phone no -->
        <div>
          <i class="fa fa-phone"></i>
          <p>+353234505445</p>
        </div>

        <div>
          <!-- email -->
          <i class="fa fa-envelope"></i>
          <p><a href="mailto:abc@thedailyblog.com">abc@thedailyblog.com</a></p>
        </div>

      </div>

      <div class="footer-right">

        <p class="footer-company-about">
          <span>About the website</span>
          We are a blog website to let you share your own story
        </p>

        <div class="footer-icons">
        <!-- icon of the footer -->
        <a href="https://www.facebook.com/" class="fa fa-facebook"></a>  
        <a href="https://twitter.com/login" class="fa fa-twitter"></a>  
        <a href="https://www.youtube.com/" class="fa fa-youtube"></a>  
        <a href="https://www.instagram.com/" class="fa fa-instagram"></a>  

        </div>

      </div>

    </footer>


</div>


