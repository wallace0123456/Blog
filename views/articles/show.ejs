<title>Blog</title>
</head>
<body>
    <div class="container">
      <!-- get basic info of the article like title,author,date and note -->
        <h1 class="mb-4"><%=article.title%></h1>
        <h2>Author: <%=article.author%></h2>
        <div class="text-muted mb2">
            <%=article.createdAt.toLocaleDateString()%>
        </div>
        <br>

        <!-- button for user to get back to home page or edit the post -->
        <a href= "/" class="btn btn-secondary"> Home </a>
        <a href= "/articles/edit/<%= article.id %>" class ="btn btn-info">Edit</a>
        <br>

        <img src  ="<%=article.image%>" alt ="<%=article.title%>" class = "wrapbox auto">  
        <div>
          <br>  
         <p class="wrapbox auto "><%=article.note %></p>
        </div>

        <form action="/articles/<%=article.slug%>/comments" method ="POST">
        <div class = "form-group">
          <h1>Comments</h1>
          <textarea rows="4" name = "comment" id= "comment" placeholder="Leave a comment.." class = "form-control rounded-0">
          </textarea>
          <br>
          <button class = 'btn rounded-0 btn-primary w-100'>Comment</button>
          <br>
        </div>

      </form>
    </div>





</body>
